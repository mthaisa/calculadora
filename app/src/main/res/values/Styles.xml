<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--Definição estilo botões-->
    <style name="Container_Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">28sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">0.5dp</item>
    </style>

    <!--Definição estilo botões operações-->
    <style name="Operators_Button" parent="Container_Button"><!--Herda informações de layout do Container_Button-->
        <item name="android:background">@color/grey</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!--Definição estilo botões númericos-->
    <style name="Numbers_Button" parent="Container_Button"><!--Herda informações de layout do Container_Button-->
        <item name="android:background">@drawable/botao_numero_clicado</item>
        <item name="android:textColor">@color/black</item>
    </style>


</resources>